.account {
  position: relative;
  padding: 15rpx 0 40rpx;
  height: 175rpx;
  text-align: center;
  background: #e94215;
}
.account .avatar {
  border-radius: 50%;
  width: 120rpx;
  height: 120rpx;
}
.account .icon-medal {
  position: absolute;
  top: 118rpx;
  left: 50%;
  z-index: 100;
  transform: translateX(-50%);
}
.account .nickname {
  margin-top: 31rpx;
  height: 24rpx;
  color: #fff;
  font-size: 24rpx;
}
.item {
  position: relative;
  margin: 0 45rpx;
  border-bottom: 1rpx solid #bfbfbf;
  padding-left: 45rpx;
  min-height: 95rpx;
  color: #333;
  font-size: 30rpx;
}
.row {
  display: flex;
  position: relative;
  justify-content: space-between;
  align-items: center;
}
.icon-mobile,
.icon-cost,
.icon-equity {
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-45%);
}
.item .mobile {
  color: #999;
}
.item button {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.equity {
  padding: 29rpx 0 29rpx 45rpx;
}
.equity .icon-equity {
  top: 26rpx;
  transform: translateY(0);
}
.equity .desc {
  margin-top: 19rpx;
  color: #666;
  font-size: 24rpx;
  line-height: 30rpx;
}