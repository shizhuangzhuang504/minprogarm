page {
  border-top: 1rpx solid #a0a0a0;
  text-align: center;
}
.banner {
  width: 100%;
}
.mobile {
  margin: 100rpx auto 0;
  border: 2rpx solid #bfbfbf;
  border-radius: 5rpx;
  width: 496rpx;
  height: 66rpx;
  color: #333;
  font-size: 30rpx;
  line-height: 66rpx;
  background: #f5f5f5;
}
.btn {
  margin: 50rpx auto 70rpx;
  border-radius: 5rpx;
  width: 500rpx;
  height: 70rpx;
  color: #fff;
  font-size: 30rpx;
  line-height: 70rpx;
  background: #e94215;
}
.btn.disabled {
  background: #bfbfbf;
}
.desc {
  border-bottom: 1rpx solid #e94215;
  padding: 0 15rpx 10rpx;
  color: #e94215;
  font-size: 24rpx;
}