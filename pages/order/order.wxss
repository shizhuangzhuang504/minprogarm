.tab {
  position: relative;
  border-bottom: 3rpx solid #ebebeb;
  padding: 34rpx 0 1rpx;
  white-space: nowrap;
  text-align: center;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  height: 176rpx;
}
.tab .tab-list {
  flex: 1;
  text-align: center;
}
.tab .tab-list image {
  width: 84rpx;
  height: 84rpx;
  display: block;
  text-align: center;
  margin: 0 auto;
  margin-bottom: 12rpx;
}
.tab .tab-list text {
  font-size: 28rpx;
}
