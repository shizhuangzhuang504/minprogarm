.index-goods {
  margin-bottom: 22rpx;
  box-shadow: 2px 6px 8px 2px rgba(9, 1, 4, 0.19);
  /* border-radius: 10rpx; */
  width: 232rpx;
  height: 342rpx;
  background: #fff;
  overflow: hidden;
}
.big{
  width:40rpx;
  height:60rpx;
  text-align: center;
}
.index-goods .goods-image {
  width: 100%;
  height: 232rpx;
  border-radius: 10rpx 10rpx 0 0;
}
.index-goods .name {
  margin-top: 10rpx;
  /* padding-left: 10rpx; */
  color: #333;
  font-size: 28rpx;
}
.index-goods .row {
  display: flex;
  justify-content: space-between;
  /* align-items: center; */
  margin-top: 10rpx;
}
.index-goods .price {
  padding-left: 12rpx;
  color: #333;
  font-size: 24rpx;
  margin-top:15rpx;
}
.index-goods .number {
  display: flex;
  padding-right: 10rpx;
  margin-top:10rpx;
  justify-content:space-between;
}
.index-goods .icon-number-reduce,
.index-goods .icon-number-add,
.index-goods .number text {
  vertical-align: text-top;
}
.index-goods .number text {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 32rpx;
  text-align: center;
}
.icon-number-reduce, .icon-number-add {
  width: 32rpx;
  height: 32rpx;
}

